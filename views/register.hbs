<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h4>Register</h4>
      <br>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
          />
        </div>
        <br>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <br>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
          />
        </div>
        <br>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
          />
        </div>
        <br>
        <div class="form-group">
          <label for="trackedHandlesStr">Initial Tracked Handles</label>
          <input
            type="text"
            id="trackedHandlesStr"
            name="trackedHandlesStr"
            class="form-control"
            placeholder="handle1, handle2, ..."
          />
        </div>
        <br>
        <div class="form-group">
        <label for="preferredTimeGMT">Preferred Post Generation Time (GMT)</label>
        <input
          type="text"
          id="preferredTimeGMT"
          name="preferredTimeGMT"
          class="form-control"
          placeholder="23:00"
        />
        </div>
        <br>
        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
      </form>
      <br>
      <hr />
      <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
    </div>
  </div>
</div>
