<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      {{#if post}}
      <p>
        <h1>{{post.title}}</h1>
        {{#each post.includedTweets}}
          <h2>{{this.name}}</h2>
          <p>{{this.screen_name}}</p>
          <p>{{this.text}}</p>
        {{/each}}
      </p>
      {{else}}
        <p>post not found</p>
      {{/if}}

    </div>
  </div>
</div>
