<h3>Welcome {{name}}</h3>
<a href="/handles/" class="btn btn-secondary">Edit Tracked Handles</a>
<p>RSS URL:  <a href={{rssUrl}}>{{rssUrl}}</a></p>
<p>Posts</p>
{{#if posts}}
  <div>
  {{#each posts}}
    {{#each post}}
      <p>
        <h1>{{post.title}}</h1>
        <a href="https://twitter.com/{{post.handle}}"
        {{#each post.includedTweets}}
          <p>{{this.created_at}}</p>
          <p>{{this.full_text}}</p>
          <a href={{this.url}}>{{this.url}}</a>
          <br>
        {{/each}}
      </p>
    {{/each}}
  {{/each}}
  </div>
{{else}}
  <p>No post summaries saved in database</p>
{{/if}}
<br>
<a href="/users/logout" class="btn btn-secondary">Logout</a>
