<h3>Welcome {{name}}</h3>
<a href="/handles/" class="btn btn-secondary">Edit Tracked Handles</a>
<p>RSS URL:  <a href={{rssUrl}}>{{rssUrl}}</a></p>
<br>
<p>Posts</p>
{{#if posts}}
  <div>
  {{#each posts}}
      <div>
        <h5>{{this.title}}</h5>
        <a href="http://{{../hostname}}/posts/{{this._id}}">http://{{../hostname}}/posts/{{this._id}}</a>
      </div>
  {{/each}}
  </div>
{{else}}
  <p>No post summaries saved in database</p>
{{/if}}
<br>
<a href="/users/logout" class="btn btn-secondary">Logout</a>
